<%- include("./partials/header") %>
<nav class="navbar navbar-dark bg-dark ">
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="navbar-brand" href="/">
                Voltar
            </a>
        </li>
    </ul>      
</nav>
<div class="container-fluid" >
    <div class="row" >
            <div class="col-md-6 offset-md-3 rounded divArticle">
                <h2>Editar Artigo</h2>
                <hr>
                <form action="/article/<%= article._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="title">Titulo</label>
                        <input type="text" name="title" value="<%= article.title %>" class="form-control" placeholder="Titulo" id="title" >
                    </div>
                    <div class="form-group">
                        <label for="description">Texto</label>
                        <textarea name="description" class="form-control" id="description" rows="7"><%= article.description %></textarea>
                    </div>
                    <button id="bt_cadastra" type="submit" class="btn btn-secondary">Alterar</button>
                </form>
            </div>
    </div>
   

</div>

<%- include("./partials/footer") %>